<script>
const lenis = new Lenis({
  duration: 1.5, 
  easing: (t) => (t === 1 ? 1 : 1 - Math.pow(2, -10 * t)), // https://easings.net
	direction: 'vertical', 
  smooth: true,
  smoothTouch: false,
  touchMultiplier: 1.5,
})


function raf(time) {
  lenis.raf(time)
  requestAnimationFrame(raf)
}

requestAnimationFrame(raf)

</script>

<script>
  function currentTime() {
    var date = new Date();
    var timezoneOffset = -5; // Cancun, Mexico is on Eastern Standard Time (EST) year-round (UTC-5)

    // Applying the timezone offset to the current time
    date.setHours(date.getHours() + date.getTimezoneOffset() / 60 + timezoneOffset);

    var hour = date.getHours();
    var min = date.getMinutes();

    // Convert to 12-hour format with AM/PM
    var ampm = hour >= 12 ? 'PM' : 'AM';
    hour = hour % 12;
    hour = hour ? hour : 12; // Handle 12 AM and 12 PM
    hour = updateTime(hour);
    min = updateTime(min);

    document.getElementById("time").innerHTML = hour + ":" + min + " " + ampm;
    var t = setTimeout(function() { currentTime() }, 1000);
  }

  function updateTime(k) {
    if (k < 10) {
      return "0" + k;
    } else {
      return k;
    }
  }

  currentTime();
</script>

